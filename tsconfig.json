{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
